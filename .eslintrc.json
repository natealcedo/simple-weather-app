{
  "parser": "@typescript-eslint/parser",
  "extends": ["next", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "plugins": ["@typescript-eslint", "unused-imports"],
  "root": true,
  "overrides": [
    {
      "files": [
        "app/**/loading.tsx",
        "app/**/not-found.tsx",
        "app/**/page.tsx",
        "app/**/layout.tsx",
        "app/**/error.tsx",
        "app/**/global-error.tsx"
      ],
      "rules": {
        "import/no-default-export": 0
      }
    }
  ]
}